<h2>Welcome to <%=@user.email %>'s wall</h2>
<%= image_tag(@user.profile_pic, class: 'img-circle', :size => '80x80') if @user.profile_pic.attached? %>
<br>
<% @albums.each do |album| %>
  <%= album.name %>
  <%= link_to 'Show album', album %>
  <%= link_to edit_album_path(album.id) do %>
    Edit
  <% end %>&emsp;

  <%= link_to destroy_album_path(id: album.id) do %>
    Delete
  <% end %>&emsp;
  <br>
<% end %>

<p></p>
<%= link_to 'New Album', new_album_path %>
<br>
<br>

<%= link_to new_post_path(id: @user.id) do %>
  New post
<% end %>
<br>

<% @usersposts.reverse.each do |post| %>
  <br>
  <div class="card mb-3">
    <div class="card-body">
      <p class="card-text"><%= post.message %></p>
    </div>
  <div class="card-body">
    <a href="#" class="card-link"><%= link_to edit_post_path(post.id) do %>
        Edit&emsp;
      <% end %></a>
    <a href="#" class="card-link"><%= link_to destroy_post_path(id: post.id) do %>
        Delete&emsp;
      <% end %></a>
    <a href="#" class="card-link"><%= link_to new_comment_path(post_id: post.id) do %>
        Comment&emsp;
      <% end %></a>
    <a href="#" class="card-link"><%= link_to likeposts_path(post_id: post.id) do %>
        <%= Emoji.find_by_alias("+1").raw %>
      <% end %>
      <%= @likes_posts[post.id] %></a>
  </div>
  <div class="card-footer text-muted">
    Posted: <%= post.created_at.strftime('%H:%M on %d-%b-%y') %>
    </p>
  </div>
  </div>

