<!--  </ul>-->

Comments:
<% @comments = Comment.where(post_id: post.id) %>
  <ul class="list-group list-group-flush">
  <% @comments.each do |comment| %>
      <li class="list-group-item"> <%=comment.message %></li>
      <div class="card-body">
        <a href="#" class="card-link"><%= link_to edit_comment_path(comment.id) do %>
            Edit&emsp;
          <% end %></a>
        <a href="#" class="card-link"><%= link_to destroy_comment_path(id: comment.id) do %>
            Delete&emsp;
          <% end %></a>
        <a href="#" class="card-link"><%= link_to likecomments_path(comment_id: comment.id) do %>
            <%= Emoji.find_by_alias("+1").raw %>
          <% end %>
          <%= @likes_comments[comment.id] %></a>
      </div>
      <div class="card-footer text-muted">
        Commented: <%= comment.created_at.strftime('%H:%M on %d-%b-%y') %>
        </p>
      </div>
      </div>
    </ul>
      <br>

    <% end %>
<% end %>

