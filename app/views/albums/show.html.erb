<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @album.name %>
</p>

<% @album.pics.all.each do |pic| %>
<%= image_tag(pic, :size => '80x80') %>
  <%= link_to destroy_pic_path(pic_id: pic.id, album_id: @album.id) do %>
    Delete
  <% end %>&emsp;
<% end %>

<%= form_for @album do |f| %>
<div class="field">
   <%= f.label :pic %><br/>
 <%= f.file_field :pic %>
</div>
<%= f.submit "Submit" %>
<% end %>


<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Delete', albums_path %>
<%= link_to 'Back', albums_path %>
